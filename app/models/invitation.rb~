class Invitation < ActiveRecord::Base

attr_accessible :avatar

attr_accessible :titre

belongs_to :author



has_attached_file :avatar,
  :content_type => :image,
  :storage => :s3, 
  :bucket => 'julienwat75', 
  :s3_credentials => "#{Rails.root}/config/s3.yml",
  :url => "tunes/:style/:id/:filename",
  :path => "tunes/:style/:id/:filename"


   

end
