<% provide(:title, "Se connecter") %>


<%= form_tag author_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :nom %> <br>
    <%= text_field_tag :username %>
    <br/>
  </div>
  <div class="field">
    <%= label_tag :password %> <br>
    <%= password_field_tag :password %>
    <br/>
  </div>
  <div class="actions" style="margin-top:20px;font-size:20px;">
    <%= submit_tag "Connexion" %>
  </div>
<% end %>



