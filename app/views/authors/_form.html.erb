<% provide(:title, "Inscription") %>



 <div class="row " >

    <div class="col-xs-0 col-sm-4 col-md-4 col-lg-4 text-center " ></div>


     <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 text-center " >

                 <div style="margin-bottom:100px;">
            
                      <h2 ><small><font color="white">Inscription</font></small></h2><br>

                     
                      
                     <%= form_for(@author) do |f| %>
                      <% if @author.errors.any? %>

                      
                        <div id="error_explanation">
                          <h4><font color="red"><%= pluralize(@author.errors.count, "error") %> Erreurs de saisies:</font></h4>

                          <ul>
                          <% @author.errors.full_messages.each do |msg| %>

                           
                            
                          <% end %>

                          <li>Pseudo(entre 5 et 9 caractères )</li>
                          <li>Password(min 5 caractères)</li>

                          </ul>
                        </div>
                      <% end %>
                      
                     

                     <div class="field" style="text-align:left;">
                        
          
                        
                      <%= f.label :Mlle,:style =>'color:black;' %> 
                      <%= f.radio_button :sexe, 'Mlle' %> &nbsp
                      <%= f.label :Mme ,:style =>'color:black;' %> 
                      <%= f.radio_button :sexe, 'Mme' %> &nbsp
                      <%= f.label :M ,:style =>'color:black;' %> 
                      <%= f.radio_button :sexe, 'M' , checked: true %>

                     </div>
                     

                      <br>


                     <div class="field">
                      
                  <%= f.text_field :email  , :placeholder => "Pseudo",:style =>'color:grey;width:100%;font-size:22px;' %>
                      
                    </div>

                    <br>


                    <div class="field">
                      
                  <%= f.text_field :username  , :placeholder => "Email",:style =>'color:grey;width:100%;font-size:22px;' %>
                 
                    </div>

                     <br>



                     <div class="field">
                      
                  <%= f.text_field :nom  , :placeholder => "Nom",:style =>'color:grey;width:100%;font-size:22px;' %>
                 
                     </div>

                      <br>


                     <div class="field">
                      
                  <%= f.text_field :prenom  , :placeholder => "Prenom",:style =>'color:grey;width:100%;font-size:22px;' %>
                 
                    </div>

                     <br>


                    <div class="field">
                      
                 <%= f.password_field :password, :placeholder => ' Password', :style =>'color:grey;width:100%;font-size:22px;' %>
                    </div>

                     <br>

                    <div class="field">
                      
                <%= f.password_field :password_confirmation, :placeholder => ' Password confirmation',:style =>'color:grey;width:100%;font-size:22px;' %>
                 
                      
                    </div>

                     <br>



                    
                      <div style="margin-top:20px;width:100%;"> 
                        <%= f.submit  "Valider", :class => 'btn btn-default btn-lg',:style =>'width:100%;'  %>
                      </div>

                       <br>
           
                 

                     <% end %>

                     

                      
                    

              </div>



              <!-- ----------------------------------------------------------------------------------------  -->






              <!-- ----------------------------------------------------------------------------------------- -->


              <div class="col-xs-0 col-sm-4 col-md-4 col-lg-4 text-center " ></div>


          </div>

         

         
  </div>