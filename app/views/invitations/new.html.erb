
<% provide(:title, "Proposer une invitation") %>

<%= form_for(@invitations) do |f| %>
  <ul>
  <% @invitations.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :Titre %><br />
    <%= f.text_field :titre %>
  </p>

  <div class="field">
    <%= f.label :Avatar %>
    <%= f.file_field :avatar %>
  </div>
  <p>
    <%= f.label :Description %><br />
    <%= f.text_area :description %>
  </p>
    <p>
    <%= f.label :Adresse %><br />
    <%= f.text_area :adresse %>
  </p>
   <p>
    <%= f.label :Date %><br />
    <div class="input-append date datepicker" id="datetimepicker" value="2012-05-15 21:05"  data-date="12-12-2013" data-date-format="dd-mm-yyyy"   > 
    <%= f.text_field :dateinvitation  %>
   
    <span class="add-on"><i class="icon-th"></i></span></div>
  </p>

<br><br>
<p>
 <%= f.label :Heure %><br />
<SELECT name="heure1">
		<OPTION VALUE="15">15</OPTION>
		<OPTION VALUE="16">16</OPTION>
		<OPTION VALUE="17">17</OPTION>
		<OPTION VALUE="18">18</OPTION>
		<OPTION VALUE="19">19</OPTION>
	</SELECT>

H



<SELECT name="minute1">
		<OPTION VALUE="00">00</OPTION>
		<OPTION VALUE="15">15</OPTION>
		<OPTION VALUE="30">30</OPTION>
		<OPTION VALUE="45">45</OPTION>
		
	</SELECT>
</p>
    

        
<br><br>


  
   <div  class="btn btn-default btn-lg">  
    <%= f.submit %>
  </div>
  
<% end %>


<script type="text/javascript">
  $('.datepicker').datepicker()
  $('[data-behaviour~=datepicker]').datepicker();
</script>

