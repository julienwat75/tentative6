  </head>

  <body>

    <div class="row ">
        <div >
          <div class="col-lg-12 text-center hidden-xs" style="height:200px;overflow :hidden;">
            <img class="img-responsive img-border img-full"  src="/img/slide-1.jpg">
            
          </div>
        </div>
  
    <div class="brand" style="color:white">Billet<font style="color:white">gratuit</font><font color="white">.com</font></div>
    <div class="address-bar">Invitations gratuites au théatres</div>

    <nav class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="index.html">Billet<font color="grey">gratuit</font><font color="#4B4F4E">.com</font></a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class=" navbar-ex1-collapse" style="background:black;">
          <ul class="nav navbar-nav" >
            <li><%= link_to "Invitations", pageinvitations_path %></li>
            <li><a href="contact.html">Concept</a></li>
            <li><a href="contact.html">Contact</a></li>
             
            
          
           <% if logged_in? %>
      <li><a href="index.html"><%= current_user.email %></a></li>
        <!-- <li><%= link_to "(logout)", logout_path %> </li>  -->
         <!--  <li> jkjkljkljl</li>  -->
        <% else %>
         <li> <%= link_to "(Connexion)", login_path %>  </li>
          <% end %>

            <% if logged_in? %>
          <li> <%= link_to "(Déconnexion)", logout_path %>  </li>
        <% end %>
          </ul>
          
          
          
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container -->
    </nav>

    <div class="container " style="background:white" >

      <div class="row">
        <div class="box">
          <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center"><strong><%= yield(:title) %></strong></h2>
            <hr>
          </div>
          <div class="col-lg-12 text-left">
            <!-- <img class="img-responsive img-border img-full" src="/img/slide-1.jpg">  -->
            
            <%= yield %>
            
            <hr>
          </div>
          
          
          <div class="col-lg-12 text-center">
            <ul class="pager">
             <li class="previous"> <%= link_to "<  Invitations", pageinvitations_path  %> </li>
              
                <% if logged_in? && current_user.id == 3  %>
                <li class="next"> <%= link_to "Filtre Invitations", webmasters_path  %> </li>
              <% end %>
              
            </ul>
          </div>
        </div>
      </div>

    </div><!-- /.container -->
     <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <p>Copyright &copy; Billetgratuit.com 2013</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- JavaScript -->
    <script src="js/jquery-1.10.2.js"></script>
    <script src="js/bootstrap.js"></script>

